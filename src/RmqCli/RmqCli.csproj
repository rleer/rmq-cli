<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>rmq</AssemblyName>
    <Authors>Richard Leer</Authors>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <InvariantGlobalization>true</InvariantGlobalization>
    <EnableConfigurationBindingGenerator>true</EnableConfigurationBindingGenerator>
    <OptimizationPreference>Speed</OptimizationPreference>

    <!-- NuGet Package Properties for dotnet tool -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>rmq</ToolCommandName>
    <PackageId>rmq</PackageId>
    <Version>0.1.0</Version>
    <PackageOutputPath>../../nupkg</PackageOutputPath>
    <Description>A .NET CLI tool for RabbitMQ focused on developers</Description>
  </PropertyGroup>

  <!-- AOT/Self-contained settings for 'dotnet publish' only -->
  <PropertyGroup Condition="'$(PublishDir)' != ''">
    <SelfContained>true</SelfContained>
    <PublishAot>true</PublishAot>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>full</TrimMode>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
    <PackageReference Include="RabbitMQ.Client" Version="7.2.0" />
    <PackageReference Include="Spectre.Console" Version="0.54.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.2" />
    <PackageReference Include="Tomlyn" Version="0.20.0" />
  </ItemGroup>

</Project>
